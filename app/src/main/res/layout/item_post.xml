<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="42dp"
            android:maxHeight="42dp"
            android:scaleType="fitCenter"
            android:layout_marginLeft="3dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="13dp"
            android:text="sdf"
            android:textColor="@color/InactiveBottomNavIconColor"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:id="@+id/ivPostPic"
        android:layout_width="match_parent"
        android:layout_height="306dp"
        android:layout_below="@id/llUser"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="58dp"
        android:adjustViewBounds="true"
        android:gravity="center_vertical"
        android:scaleType="centerCrop"
        tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/llActions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivPostPic"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLike"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_favorite_border_black_24dp"
            android:contentDescription="TODO" />

        <ImageView
            android:id="@+id/ivComment"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:paddingTop="2dp"
            app:srcCompat="@drawable/ic_chat_bubble_outline_black_24dp" />

        <ImageView
            android:id="@+id/ivSend"
            android:layout_width="33dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:paddingTop="1dp"
            app:srcCompat="@drawable/ic_send_black_24dp" />

        <ImageView
            android:id="@+id/ivBookmark"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="220dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_bookmark_border_black_24dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/llActions"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="description"
        android:textAppearance="@style/TextAppearance.AppCompat" />

</RelativeLayout>